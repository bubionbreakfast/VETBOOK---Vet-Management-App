<form method="post" action="/pets">
  <label for="pet-name-field">Pet Name: </label>
  <input
  type="text"
  name="name"
  id="pet-name-field"
  />

  <label for="birth-date-field">Date of Birth: </label>
  <input
  type="text"
  name="birth_date"
  id="birth-date-field"
  />

  <label for="sex-label">Sex of Pet: </label>
  <input type="text"
  name="sex"
  id ="sex-label"
  />

  <label for="owner-field">Name of Pet Owner: </label>
  <input type="text"
  name="owner"
  id = "owner-field"
  />

  <label for="type-feild">Type of Pet: </label>
  <input type="text"
  name="type"
  id ="type-feild"
  />

  <label for="notes-feild">Pets Notes: </label>
  <input type="text"
  name="notes"
  id = "notes-field"
  />

  <label for="vet-select">Select Vet</label>
  <select name="vet.id" id="vet-select" >
    <%= @vets.each do |vet| %>
    <option value=<%= vet.id %>><%= vet.pretty_name.capitalize %></option>
    <% end %>
  </select>

  <input type="submit" value="Create Pet">
</form>
