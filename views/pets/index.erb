<h1>Pets</h1>
<p><a href="/pets/new">Create Pet</a>

  <table>
    <tr>
      <th>Name</th>
      <th></th>
      <th>Date of Birth</th>
      <th>Sex</th>
      <th>Type</th>
      <th>Pets Notes</th>
      <th>Current Vet</th>
      <th>Owner</th>
    </tr>
    <% for pet in @pets %>
    <tr>
      <td><a href="/pets/<%= pet.id %>"><%= pet.name %></a></td>
      <td>|</td>
      <td><%= pet.birth_date %></td>
      <td><%= pet.sex %></td>
      <td><%= pet.type %></td>
      <td><%= pet.notes %></td>
      <td><a href="/vets/<%= pet.vet.id %>"><%= pet.vet.pretty_name %></a></td>
      <td><a href="/owners/<%= pet.owner.id %>"><%= pet.owner.pretty_name %></a></td>
    </tr>
    <% end %>
  </table>
