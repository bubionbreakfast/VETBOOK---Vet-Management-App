<form method="post" action="/pets/<%= @pets.id %>">
  <label for="first-name-field">Pet Name:</label>
  <input
  type="text"
  name="name"
  id="first-name-field"
  value="<%= @pets.name %>"
  />

  <label for="birth-date-field">Date of Birth: </label>
  <input
  type="text"
  name="birth_date"
  id="birth-date-field"
  value="<%= @pets.birth_date %>"
  />

  <label for="sex-label">Sex of Pet: </label>
  <input type="text"
  name="sex"
  id ="sex-label"
  value="<%= @pets.sex %>"
  />

  <label for="owner_select">Select Owner</label>
  <select name="owner_id" id="owner_select" selected="<%= @pets.owner_id %>">
    <% @owners.each do |owner| %>
    <% if owner.id == @pets.owner_id %>
    <option value=<%= owner.id %> selected><%= owner.pretty_name.capitalize %></option>
    <% else %>
    <option value=<%= owner.id %>><%= owner.pretty_name.capitalize %></option>
    <% end %>
    <% end %>
  </select>

  <label for="type-feild">Type of Pet: </label>
  <input type="text"
  name="type"
  id ="type-feild"
  value="<%= @pets.type %>"
  />

  <label for="notes-feild">Pets Notes: </label>
  <textarea rows="10" cols="50"
  name="notes"
  id = "notes-field">

  <%= @pets.notes %>
  </textarea>

  <label for="vet_select">Select Vet</label>
  <select name="vet_id" id="vet_select" selected="<%= @pets.vet_id %>">
    <% @vets.each do |vet| %>
    <% if vet.id == @pets.vet_id %>
    <option value=<%= vet.id %> selected><%= vet.pretty_name.capitalize %></option>
    <% else  %>
    <option value=<%= vet.id %>><%= vet.pretty_name.capitalize %></option>
    <% end %>
    <% end  %>
  </select>

  <input class="btn btn--action" type='submit' value="Edit Pet">

</form>

<input class="btn btn--danger" type="submit" value="Delete Pet"/>
